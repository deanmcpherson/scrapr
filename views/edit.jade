extends editLayout

block content
  #drag
  .pageLeft
    .topBar
      h1 Edit #{content.name}
      a(href="/admin/"+org) back to #{org}
    #content.hidden= content.content
    .bottomBar
      .revert Revert
      .save Save
    input#url.hidden(value=url)
    input#url-src.hidden(value=content.url)
  .pageRight
    #change-src.topBar
      a(data-style="language-markup") HTML
      a(data-style="language-javascript") JS
    pre
      code#src.language-markup